<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义错误（旧接口）"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义崩溃（旧接口）"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt1"/>
    <Button
        android:id="@+id/bt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义事件(type=0)"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt2"/>
    <Button
        android:id="@+id/bt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义错误（type=1）"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt3"/>
    <Button
        android:id="@+id/bt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="捕获异常（type=2）"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt4"/>
    <Button
        android:id="@+id/bt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exception（type=0）"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt5"/>
    <Button
        android:id="@+id/bt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exception（type=1）"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt6"/>
</androidx.constraintlayout.widget.ConstraintLayout>